<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/klarna_msdk_internal_browser_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_browser_klarna_inapp_sdk"
    tools:ignore="RtlHardcoded,RtlSymmetry,UnusedAttribute,ObsoleteLayoutParam,Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/guideline"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/klarna_msdk_internal_browser_close_icon"
        android:layout_toLeftOf="@+id/klarna_msdk_internal_browser_close_icon"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/klarna_msdk_internal_browser_lock_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/lock_klarna_inapp_sdk" />

        <TextView
            android:id="@+id/klarna_msdk_internal_browser_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/color_address_klarna_inapp_sdk"
            tools:text="Foo Bar" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/klarna_msdk_internal_browser_close_icon"
        android:layout_width="?android:attr/actionBarSize"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/close_klarna_inapp_sdk"
        android:tint="@android:color/black" />

    <View
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/klarna_msdk_internal_browser_close_icon" />

    <ProgressBar
        android:id="@+id/klarna_msdk_internal_browser_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_above="@+id/guideline"
        android:progressDrawable="@drawable/progress_browser_klarna_inapp_sdk" />

    <WebView
        android:id="@+id/klarna_msdk_internal_browser_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/klarna_msdk_internal_browser_base_bar"
        android:layout_alignTop="@+id/guideline" />


    <LinearLayout
        android:id="@+id/klarna_msdk_internal_browser_base_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.klarna.mobile.sdk.core.ui.TintableImageView
            android:id="@+id/klarna_msdk_internal_browser_back_icon"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:src="@drawable/back_klarna_inapp_sdk"
            app:tintColorStateList="@color/btn_nav_tint_klarna_inapp_sdk" />

        <com.klarna.mobile.sdk.core.ui.TintableImageView
            android:id="@+id/klarna_msdk_internal_browser_forward_icon"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:src="@drawable/forward_klarna_inapp_sdk"
            app:tintColorStateList="@color/btn_nav_tint_klarna_inapp_sdk" />
    </LinearLayout>

</RelativeLayout>